generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Album {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  coverId   String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cover     Photo?   @relation("AlbumCover", fields: [coverId], references: [id])
  photos    Photo[]  @relation("AlbumPhotos")
}

model Photo {
  id           String       @id @default(cuid())
  albumId      String?
  url          String
  r2Key        String
  title        String?
  description  String?
  order        Int          @default(0)
  exif         Json?
  takenAt      DateTime?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  thumbnailUrl String?
  status       PhotoStatus  @default(PUBLISHED)
  albumCover   Album?       @relation("AlbumCover")
  album        Album?       @relation("AlbumPhotos", fields: [albumId], references: [id])
  tags         TagOnPhoto[]
}

model Tag {
  id     String       @id @default(cuid())
  name   String       @unique
  photos TagOnPhoto[]
}

model TagOnPhoto {
  photoId String
  tagId   String
  photo   Photo  @relation(fields: [photoId], references: [id])
  tag     Tag    @relation(fields: [tagId], references: [id])

  @@id([photoId, tagId])
}

model Admin {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

enum PhotoStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}
